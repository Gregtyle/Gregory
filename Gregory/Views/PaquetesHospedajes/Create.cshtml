@model Gregory.Models.PaquetesHospedaje

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Agregar</h1>

<h4>Paquetes Hospedaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nombre" class="control-label"></label>
                <input asp-for="Nombre" class="form-control" />
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PrecioTotal" class="control-label"></label>
                <input asp-for="PrecioTotal" class="form-control" id="precio" />
                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdServicioNavigation" class="control-label"></label>
                <select asp-for="IdServicio" class="form-control" asp-items="ViewBag.IdServicio" id="servicio-select">
                    <option value="">-- Selecciona un servicio --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="IdHabitacionNavigation" class="control-label"></label>
                <select asp-for="IdHabitacion" class="form-control" asp-items="ViewBag.IdHabitacion" id="habitacion-select">
                    <option value="">-- Selecciona una habitación --</option>
                </select>
            </div>
            <div class="form-group">
                <label>Subtotal:</label>
                <input type="text" id="subtotal" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label>Precio Total:</label>
                <input asp-for="PrecioTotal" class="form-control" id="total" readonly />
                <span asp-validation-for="PrecioTotal" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Agregar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Volver a la lista</a>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Función para actualizar el total
            function actualizarTotal() {
                var idServicio = $('#servicio-select').val();
                var idHabitacion = $('#habitacion-select').val();
                var precio = parseFloat($('#precio').val()) || 0;

                // Si ambos están seleccionados, hacer la llamada AJAX para obtener los precios
                if (idServicio && idHabitacion) {
                    $.ajax({
                        url: '@Url.Action("ObtenerPrecios", "PaquetesHospedajes")', // URL al método de controlador
                        type: 'GET',
                        data: { idServicio: idServicio, idHabitacion: idHabitacion },
                        success: function (data) {
                            // Actualizar el campo de subtotal con el precio calculado
                            $('#subtotal').val(data.subtotal.toFixed(2));

                            // Calcular el precio total incluyendo el precio adicional
                            var precioTotal = data.subtotal + precio;

                            // Mostrar el precio total en el campo correspondiente
                            $('#total').val(precioTotal.toFixed(2));
                        }
                    });
                } else {
                    // Limpiar subtotal y total si no hay selección
                    $('#subtotal').val('');
                    $('#total').val('');
                }
            }

            // Capturar el evento de cambio en los selectores
            $('#servicio-select, #habitacion-select, #precio').change(function () {
                // Llamar a la función para actualizar el total
                actualizarTotal();
            });
        });

    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    </script>
}

